<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <filter>
  	<filter-name>AuthentificationFilter</filter-name>
  	<display-name>AuthentificationFilter</display-name>
  	<description></description>
  	<filter-class>by.epam.epamlab.filters.AuthentificationFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>RequestLoggingFilter</filter-name>
  	<display-name>RequestLoggingFilter</display-name>
  	<description></description>
  	<filter-class>by.epam.epamlab.filters.RequestLoggingFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>AuthentificationFilter</filter-name>
  	<url-pattern>/AuthentificationFilter</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>RequestLoggingFilter</filter-name>
  	<url-pattern>/RequestLoggingFilter</url-pattern>
  </filter-mapping>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<display-name>LoginServlet</display-name>
  	<description></description>
  	<servlet-class>by.epam.epamlab.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LogoutServlet</servlet-name>
  	<display-name>LogoutServlet</display-name>
  	<description></description>
  	<servlet-class>by.epam.epamlab.servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LogoutServlet</servlet-name>
  	<url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>
</web-app>
